{
  "name": "interval-check",
  "version": "1.0.1",
  "description": "Polling check by intervally",
  "author": "imcuttle <moyuyc95@gmail.com>",
  "scripts": {
    "test": "npx jest",
    "preversion": "npm test",
    "build": "npm run clean && run-p --print-label \"build:**\"",
    "build:es": "tsc --outDir es --module es6",
    "build:cjs": "tsc --outDir lib",
    "build:tds": "tsc --emitDeclarationOnly -d",
    "clean": "rimraf types es lib",
    "doc": "documentation --github --markdown-toc=false readme es/index.js -a public -s \"API\" && git add README.md",
    "version": "npm run build && npm run doc && npm run changelog",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "imcuttle",
    "interval",
    "check",
    "interval-check"
  ],
  "main": "lib",
  "types": "types",
  "license": "MIT",
  "repository": "imcuttle/interval-check",
  "module": "es",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__test{s,}__/*.(spec|test).{t,j}s{x,}"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.10",
    "conventional-changelog-cli": "^2.1.0",
    "documentation": "^13.0.2",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  }
}
